{
  "name": "unity-ui-toolkit",
  "displayName": "Unity UI Toolkit",
  "description": "Unity UI Toolkit support for VSCode with UXML and USS syntax highlighting, validation, and intelligent linking",
  "version": "0.1.1",
  "publisher": "unity-ui-toolkit",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "unity",
    "ui toolkit",
    "uxml",
    "uss",
    "unity ui",
    "unity editor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "uxml",
        "aliases": [
          "UXML",
          "Unity XML"
        ],
        "extensions": [
          ".uxml"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "uss",
        "aliases": [
          "USS",
          "Unity Style Sheets"
        ],
        "extensions": [
          ".uss"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "uxml",
        "scopeName": "text.xml.uxml",
        "path": "./syntaxes/uxml.tmLanguage.json"
      },
      {
        "language": "uss",
        "scopeName": "source.css.uss",
        "path": "./syntaxes/uss.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Unity UI Toolkit",
      "properties": {
        "unityUIToolkit.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable USS property validation"
        },
        "unityUIToolkit.validation.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable strict validation mode (show warnings for Unity-specific properties)"
        },
        "unityUIToolkit.intellisense.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable intelligent linking between UXML and USS files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "package:pre-release": "vsce package --pre-release",
    "publish:pre-release": "vsce publish --pre-release"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.1",
    "@types/glob": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "fast-xml-parser": "^4.2.5"
  }
}
